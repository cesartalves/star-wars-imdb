<!DOCTYPE html>
<html>
  <head>
    <title>TrayRubyTestMovieRating</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <%= nav_bar brand: "Tray-Star Wars-IMDB", brand_link: root_url, responsive: true do %>
      <%= menu_group do %>
        <%= menu_item "Lista de filmes",  movies_index_path %>
        <%= menu_item "Ranking", movies_ranking_path %>
      <% end %>

      <p class="navbar-text pull-right">
        <% if user_signed_in? %>
          Logado como <strong><%= current_user.email %></strong>.
          <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Cadastrar", new_user_registration_path, :class => 'navbar-link'  %> |
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
      </p>
    <% end # nav_bar %>
    <div class="container">
      <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    </div>
    <%= yield %>
  </body>
</html>
